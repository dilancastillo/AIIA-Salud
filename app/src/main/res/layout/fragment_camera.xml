<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_camera_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ui.camera.CameraFragment">

    <!-- Vista previa de la cÃ¡mara (CameraX) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:keepScreenOn="true" />

    <!-- Reproductor de video (ExoPlayer) para videos motivacionales / relajantes -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        android:background="#111"
        android:use_controller="false"
        android:keepScreenOn="true"
        tools:ignore="MissingClass" />

    <!-- Estado o mensaje temporal (por ejemplo: 'Detectando rostro...') -->
    <TextView
        android:id="@+id/txtDetectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detectando rostro..."
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp"
        android:background="#66000000"
        android:padding="8dp"
        android:visibility="visible" />

</FrameLayout>
