<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.MainActivity">

    <!-- Vista de cámara (PreviewView de CameraX) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título superior -->
    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Hola, bienvenido!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AIIA Salud – Atención Geriátrica con Temi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Botón: iniciar cámara -->
    <Button
        android:id="@+id/btnStartCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar monitoreo facial"
        android:drawableStart="@android:drawable/ic_menu_camera"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/material_dynamic_primary70"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón: patrullaje Temi -->
    <Button
        android:id="@+id/btnStartPatrol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar rondas de Temi"
        android:drawableStart="@android:drawable/ic_menu_compass"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/material_dynamic_secondary70"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/btnStartCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Estado emocional -->
    <TextView
        android:id="@+id/tvEmotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emoción: --"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnStartPatrol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Icono info (placeholder de uso general) -->
    <ImageView
        android:id="@+id/imageInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintTop_toBottomOf="@id/tvEmotion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Botón cerrar -->
    <ImageButton
        android:id="@+id/close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Cerrar"
        app:layout_constraintTop_toBottomOf="@id/tvEmotion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Contenedor dinámico (puedes usarlo para fragmentos u overlays) -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F7F7F7"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
